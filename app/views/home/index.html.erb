<h1 class="title" id="header">Welcome to the Super Awesome Image Sharer App!</h1>
<button><%= link_to 'Add Image', controller: 'images', action: 'new' %></button>

<br><br>

<h3>Here are the images you have shared so far:</h3>

<table>
  <% @images.each do |image| %>
    <% if image.url %>
      <tr>
        <td><%= image_tag(image.url, width: '400') %></td>
        <td id="tags"><strong>Tags:</strong> <%= raw(image.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></td>
        <td><%= button_to 'Delete', image_path(image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% end %>
</table>
